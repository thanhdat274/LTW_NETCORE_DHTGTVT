                    <li>you have no items in your Shopping cart</li>
                </ul>
            </div></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="header_bottom">
        <div class="menu">
            <ul>
                <li class="active"><a href="@Url.Action("Index", "HangHoa")">NGUYEN THE LOAN AN</a></li>
                @foreach (var loaiHang in Model)
                {
                <li><a href="@Url.Action("Index", "HangHoa", new { loaiHangId = loaiHang.MaLoai })">@loaiHang.TenLoai</a></li>
