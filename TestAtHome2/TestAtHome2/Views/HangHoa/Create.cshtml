@model TestAtHome2.Models.HangHoa

@{
    ViewData["Title"] = "Thêm mới hàng hóa";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đường dẫn đến layout
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Errors is IEnumerable<string> errors && errors.Any())
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form asp-controller="HangHoa" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MaLoai" class="control-label"></label>
        <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.LoaiHangs"></select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenHang" class="control-label"></label>
        <input asp-for="TenHang" class="form-control" />
        <span asp-validation-for="TenHang" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gia" class="control-label"></label>
        <input asp-for="Gia" type="number" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Anh" class="control-label"></label>
        <input asp-for="Anh" class="form-control" />
        <span asp-validation-for="Anh" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm mới" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
